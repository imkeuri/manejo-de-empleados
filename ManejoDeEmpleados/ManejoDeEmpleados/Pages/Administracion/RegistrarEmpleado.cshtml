@page "/Administracion/RegistrarEmpleado"
@model ManejoDeEmpleados.Pages.Administracion.RegistrarEmpleadoModel
@{
}
 <body class="bg-light">
    
<div class="container">
  <main>
    <div class="py-5 text-center">
      <img class="d-block mx-auto mb-4" src="https://images.unsplash.com/photo-1615985249956-d13775508df8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1471&q=80" alt="" width="72" height="57">
      <h2>Registrar empleado</h2>
      <p class="lead">Introduce los datos personales de los empleados</p>
    </div>

    <div class="row g-5">
      <div class="col-md-7 col-lg-8">
        <h4 class="mb-3">Formulario de registro</h4>
        <form class="needs-validation" novalidate>
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="firstName" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="firstName" placeholder="Fulano" value="" required>
              <div class="invalid-feedback">
                  Por favor introduce un nombre
              </div>
            </div>

            <div class="col-sm-6">
              <label for="lastName" class="form-label">Apellido</label>
              <input type="text" class="form-control" id="lastName" placeholder="Mendano" value="" required>
              <div class="invalid-feedback">
                Por favor introduce un apellido
              </div>
            </div>


            <div class="col-12">
              <label for="email" class="form-label">Email personal</label>
              <input type="email" class="form-control" id="email" placeholder="you@example.com">
              <div class="invalid-feedback">
                Por favor introduce tu email personal
              </div>
            </div>

            <div class="col-12">
              <label for="address" class="form-label">Direccion</label>
              <input type="text" class="form-control" id="address" placeholder="1234 Main St" required>
              <div class="invalid-feedback">
               Por favor introduce tu direccion
              </div>
            </div>

            <hr class="my-4">
            
            <div class="form-group col-sm-6">
              <label for="inputState">Departamento</label>
              <select id="inputState" class="form-control">
                <option selected>Choose...</option>
                <option>...</option>
              </select>
            </div>
       
            <div class="form-group col-sm-6">
              <label for="inputState">Puesto</label>
              <select id="inputState" class="form-control">
                <option selected>Choose...</option>
                <option>...</option>
              </select>
            </div>
        
          

            <div class="col-12">
              <label for="zip" class="form-label">Telefono</label>
              <input type="text" class="form-control" id="zip" placeholder="" required>
              <div class="invalid-feedback">
                El telefono es requerido
              </div>
            </div>
          </div>


          <hr class="my-4">

          <button class="w-100 btn btn-primary btn-lg" type="submit">Registrar</button>
        </form>
      </div>
    </div>
  </main>

</div>

</body>
